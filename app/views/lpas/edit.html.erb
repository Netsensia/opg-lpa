<%= form_for @lpa do |f| %>
LPA:
  <%= f.label :type %>
  <%= f.select :type, ["Financial", "Welfare"] %>
Donor:
  <%= f.fields_for @lpa.donor do |donor_form| %> 
    <%= donor_form.label "title" %>
    <%= donor_form.select "title", ["Mr", "Ms"] %>
    <%= donor_form.label "first_name" %>
    <%= donor_form.text_field "first_name" %>
    <%= donor_form.submit "Save and continue" %>
  <% end %>
<% end %>